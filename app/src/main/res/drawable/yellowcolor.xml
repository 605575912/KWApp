<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  设置背景色（灰色）  -->
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="12dp" />
            <gradient android:startColor="@color/gray_line"
                android:endColor="@color/gray_line" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="#ED9B44" />
            </shape>
        </clip>
    </item>
    <!--  设置进度条颜色（绿色）  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="12dp" />
                <gradient  android:startColor="#ED9B44"
                    android:endColor="#ED9B44" />
            </shape>
        </clip>
    </item>
</layer-list>