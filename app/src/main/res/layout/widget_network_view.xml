<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/controls1"
        style="@style/base_wrap"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@mipmap/icon_network" />

    <TextView
        android:id="@+id/tv_msg"
        style="@style/base_wrap"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_919191"
        android:text="@string/text_network_msg"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/bt_confirm"
        style="@style/base_wrap"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bt_yellow_shape"
        android:textColor="@color/white"
        android:text="@string/text_network_loding"
        android:textSize="@dimen/sp_16" />

</LinearLayout>