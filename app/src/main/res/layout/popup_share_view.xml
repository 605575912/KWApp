<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/app_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_7f000000">

    <Button
        android:id="@+id/other_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_share_shape"
        android:text="@string/button_cancel"
        android:textColor="@color/font_main"
        android:textSize="@dimen/sp_17" />


    <LinearLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_above="@id/other_cancel"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bt_share_shape">

        <TextView
            android:id="@+id/tv_fm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="gone"
            android:text="疯蜜好友" />

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:drawableTop="@mipmap/logo_wechat"
            android:gravity="center"
            android:text="微信好友" />
        <!--  android:layout_centerInParent="true"-->

        <TextView
            android:id="@+id/tv_wechat_moments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableTop="@mipmap/logo_wechatmoments"
            android:gravity="center"
            android:text="朋友圈" />

    </LinearLayout>
</RelativeLayout>